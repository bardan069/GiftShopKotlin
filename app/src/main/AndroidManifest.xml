<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        tools:replace="android:fullBackupContent"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GiftShop"
        tools:targetApi="31">

        <activity
            android:name=".view.admin.UpdateProductActivity"
            android:exported="true"
            android:label="@string/title_activity_update_product"
            android:theme="@style/Theme.GiftShop" />

        <activity
            android:name=".auth.RegistrationActivity"
            android:exported="true"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.GiftShop" />

        <activity
            android:name=".auth.ForgetPasswordActivity"
            android:exported="true"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.GiftShop" />

        <activity
            android:name=".view.DashboardActivity"
            android:exported="true"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.GiftShop" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.GiftShop" />

        <activity
            android:name=".navigation.NavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_nav_bar"
            android:theme="@style/Theme.GiftShop" />

        <!-- Corrected SplashActivity path assuming it's in root package -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.GiftShop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
